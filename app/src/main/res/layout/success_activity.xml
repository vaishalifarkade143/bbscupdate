<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <include layout="@layout/toolbar"/>

        <ScrollView
        android:layout_below="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/waitLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_above="@+id/progressBar"
            android:text="Please Wait..."
            android:textSize="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:layout_below="@+id/toolbar1"
        android:id="@+id/errorLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/err_txt"
            android:layout_margin="@dimen/dimen_20dp"
            android:textSize="@dimen/dimen_20dp"
            android:textAlignment="center"
            android:text="Your paper is in submission process. Please click below to complete the process and get the updated status."
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/retry"
            android:layout_below="@+id/err_txt"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/WhiteSmoke"
            android:text="Complete proccess"
            android:padding="@dimen/dimen_10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/resultLL"
        android:visibility="gone"
        android:layout_below="@+id/toolbar1"
        android:layout_margin="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnknownIdInLayout">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/resLay"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_20dp"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/dimen_25dp"
            android:id="@+id/title"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your response has been recorded."
            tools:ignore="HardcodedText" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/holdMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hold"/>


    </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/dimen_20dp"
            android:visibility="gone"
            android:layout_below="@+id/resLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/showRes"
            >
            <TextView
                android:textSize="@dimen/dimen_20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Score"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/obt_mark"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tot"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/percent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/status"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</RelativeLayout>
    </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:padding="10dp"
            android:background="@drawable/black_ovalshape"
            android:id="@+id/couldnt_reach_internet_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Can't reach the internet."
            tools:ignore="HardcodedText" />


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/internetOffRL"
            android:background="@color/bgBottomNavigation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            >
            <TextView
                android:layout_alignParentStart="true"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="30dp"
                android:text="No connection"
                tools:ignore="HardcodedText" />


            <TextView
                android:id="@+id/try_again_txt"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:text="TRY AGAIN"
                tools:ignore="HardcodedText,RtlHardcoded" />


            <ProgressBar
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:id="@+id/simpleProgressBar_internet"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="35dp"

                />



        </RelativeLayout>


    </LinearLayout>
    <!--internet code-->
    </RelativeLayout>
</RelativeLayout>