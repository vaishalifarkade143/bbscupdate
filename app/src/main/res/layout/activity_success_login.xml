<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/sv_login"
        android:nestedScrollingEnabled="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_scrollFlags="scroll|enterAlways">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tickImg_progBar_LL">

                    <TextView
                        android:id="@+id/img_tick"
                        android:layout_centerHorizontal="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:textSize="20dp"
                        android:text="\u2713"
                        android:gravity="center"
                        android:textColor="@color/LightGrey"
                        />


                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/simpleProgressBar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/txt_succeess"

                        />


                </LinearLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/txt_succeess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_below="@+id/tickImg_progBar_LL"
                    android:text="Success!"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/success_content"
                    android:layout_marginTop="10dp"

                    android:layout_below="@+id/txt_succeess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="You are ready to start learning!"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white"
                    />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>